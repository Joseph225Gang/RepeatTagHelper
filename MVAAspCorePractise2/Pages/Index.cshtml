@page
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration
@model IndexModel
@Configuration["computername"]<br />
@Configuration["MyTwitter"]<br />
@Configuration["MyName"]<br />
<repeat count="6">
    <p>I will be repeated!!!</p>
</repeat>
@{
    ViewData["Title"] = "Home page";
}

<form method="post">
    <h3>@Model.Message</h3>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.Id</td>
                    <td>@customer.Name</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@customer.Id">edit</a>
                        <button type="submit" asp-page-handler="delete" asp-route-id="@customer.Id">delete</button>
                    </td>
                </tr>

            }
        </tbody>
    </table>
    <a asp-page="./Create">Create</a>
</form>
